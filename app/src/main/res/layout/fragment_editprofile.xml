<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.EditProfileFragment">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="96dp"
        android:layout_height="56dp"
        android:src="@drawable/back_button"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/smallHatchiLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="189dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/hathchi_logo" />

                <TextView
                    android:id="@+id/detailsInstructions"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="Edit your personal details below." />

                <EditText
                    android:id="@+id/firstNameEdtTxt"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:hint="First Name"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="textPersonName"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <EditText
                    android:id="@+id/lastNameEdtTxt"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:hint="Surname"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="textPersonName"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <EditText
                    android:id="@+id/emailEdtTxt"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:hint="Password"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="textPassword" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <EditText
                    android:id="@+id/editTextConfirmPassword"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:hint="Confirm Password"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="textPassword" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <Button
                    android:id="@+id/saveEditButton"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Save" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>